{
  "name": "@eleven-am/pondsocket-nest",
  "version": "0.0.133",
  "description": "PondSocket is a fast simple socket server",
  "keywords": [
    "socket",
    "server",
    "ws",
    "websocket",
    "pubsub",
    "presence",
    "realtime",
    "realtime server"
  ],
  "publishConfig": {
    "access": "public"
  },
  "author": "Roy OSSAI",
  "main": "./index.js",
  "types": "./index.d.ts",
  "license": "GPL-3.0",
  "scripts": {
    "build": "rimraf dist && tsc",
    "lint": "eslint --ext .ts src",
    "lint:fix": "eslint --fix --ext .ts src",
    "copy": "cp package.json dist && cp README.md dist && cp LICENSE dist && cp src/context.d.ts dist/index.d.ts",
    "push": "npm version patch && npm run copy && cd dist && npm publish && cd ..",
    "pipeline": "npm run build && npm run push"
  },
  "dependencies": {
    "@eleven-am/pondsocket": "^0.1.214",
    "@golevelup/nestjs-discovery": "^5.0.0"
  },
  "devDependencies": {
    "@nestjs/common": "^11.1.6",
    "@nestjs/core": "^11.1.6",
    "@types/jest": "^30.0.0",
    "@typescript-eslint/eslint-plugin": "^8.46.1",
    "eslint-plugin-file-progress": "^3.0.2",
    "eslint-plugin-import": "^2.32.0",
    "jest": "^30.2.0",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.5",
    "ts-loader": "^9.5.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.test\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
