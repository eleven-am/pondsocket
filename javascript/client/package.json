{
  "name": "@eleven-am/pondsocket-client",
  "version": "0.0.29",
  "description": "PondSocket is a fast simple socket server",
  "keywords": [
    "socket",
    "server",
    "ws",
    "websocket",
    "pubsub",
    "presence",
    "realtime",
    "realtime server"
  ],
  "publishConfig": {
    "access": "public"
  },
  "author": "Roy OSSAI",
  "main": "./index.js",
  "types": "./index.d.ts",
  "sideEffects": false,
  "license": "GPL-3.0",
  "scripts": {
    "test": "jest --coverage --verbose",
    "build": "rimraf dist && tsc",
    "lint": "eslint --ext .ts src",
    "lint:fix": "eslint --fix --ext .ts src",
    "copy": "cp package.json dist && cp README.md dist && cp LICENSE dist && cp src/index.d.ts dist && cp src/dist.d.ts dist",
    "push": "npm version patch && npm run copy && cd dist && npm publish && cd ..",
    "pipeline": "npm run test && npm run build && npm run push"
  },
  "dependencies": {
    "@eleven-am/pondsocket-common": "^0.0.32",
    "websocket": "^1.0.35"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/websocket": "^1.0.10",
    "@typescript-eslint/eslint-plugin": "^8.46.1",
    "eslint-plugin-file-progress": "^3.0.2",
    "eslint-plugin-import": "^2.32.0",
    "jest": "^30.2.0",
    "prettier": "^3.6.2",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.5",
    "ts-loader": "^9.5.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.test\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
