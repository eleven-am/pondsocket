{
  "name": "@eleven-am/pondsocket",
  "version": "0.1.212",
  "description": "PondSocket is a fast simple socket server",
  "keywords": [
    "socket",
    "server",
    "ws",
    "websocket",
    "pubsub",
    "presence",
    "realtime",
    "realtime server"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "test": "jest --coverage --verbose --forceExit --detectOpenHandles --runInBand --bail",
    "build": "rimraf dist && tsc && npm run remove",
    "lint": "eslint --ext .ts src",
    "lint:fix": "eslint --fix --ext .ts src",
    "remove": "rm -r dist/tests && rm dist/distIndex.js",
    "copy": "cp src/types.d.ts dist/types.d.ts && cp src/distIndex.ts dist/index.d.ts && cp package.json dist && cp README.md dist && cp LICENSE dist",
    "push": "npm version patch && npm run copy && cd dist && npm publish && cd ..",
    "pipeline": "npm run lint:fix && npm run lint && npm run test && npm run build && npm run push"
  },
  "author": "Roy OSSAI",
  "license": "GPL-3.0",
  "main": "./index.js",
  "types": "./index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Eleven-am/pondSocket.git"
  },
  "dependencies": {
    "@eleven-am/pondsocket-common": "^0.0.26",
    "redis": "^5.8.3",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@eslint/compat": "^1.4.0",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.38.0",
    "@stylistic/eslint-plugin-ts": "^4.4.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.8.1",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^8.46.1",
    "@typescript-eslint/parser": "^8.46.1",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-node": "^0.3.9",
    "eslint-plugin-file-progress": "^3.0.2",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.4.0",
    "jest": "^30.2.0",
    "prettier": "^3.6.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.5",
    "ts-loader": "^9.5.4",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.test\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
